# Utiliza una imagen base de Node.js para construir la aplicaci贸n
FROM node:14 AS build

# Establece el directorio de trabajo
WORKDIR /app

# Copia los archivos de la aplicaci贸n al contenedor
COPY package*.json ./
COPY . .

# Instala las dependencias y construye la aplicaci贸n
RUN npm install
RUN npm run build

# Utiliza una imagen base de Nginx para servir la aplicaci贸n
FROM nginx:alpine

# Copia los archivos construidos al directorio de Nginx
COPY --from=build /app/build /usr/share/nginx/html

# Expone el puerto 80
EXPOSE 80

# Comando para iniciar Nginx
CMD ["nginx", "-g", "daemon off;"]